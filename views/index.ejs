<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://kit.fontawesome.com/fafb133810.js" crossorigin="anonymous"></script>

    <title>Hello, world!</title>
</head>
<body>


<div class="container">
    <%include nav.ejs%>
    <h2><a href="#">Hình nền đẹp cho dễ yêu của bạn</a></h2>
    <div class="row">
        <% for(var i = 0;i < data.length;i++){ %>
            <div class="card mt-5 " style="width: 20rem;">


               <div class="wrapper">
                   <img class="card-img-top" src="<%= data[i].urlImage %>" alt="Card image cap" height="630px">
                   <div class="overlay">
                       <div class="content" style="font-size: 1rem">
                           <form method="post" action="/showDetail">
                               <input name="id" value="<%=data[i]._id%>" hidden>
                               <button class="btn btn-outline-light" type="submit">Click here</button>
                           </form>
                       </div>
                   </div>

               </div>
                <div class="card-body">
                    <h5 class="card-title"><%= data[i].title %></h5>
                    <p class="card-text"><%= data[i].description %></p>

                </div>
                <div class="time" style="padding: 10px">
                    <img src="https://img.icons8.com/fluency-systems-regular/344/timer.png" width="12px"
                         height="12px" style="margin-right: 10px;margin-top: 5px">
                    <h6 style="font-size: 10px;margin-top: 5px"><%= data[i].time %></h6>
                    <img src="https://img.icons8.com/material-two-tone/344/share.png" width="10px" height="10xp"
                         style="margin-left: 90px;margin-top: 5px">
                    <h6 style="margin-left: 13px;font-size: 10px;margin-top: 5px">SHARE</h6>

                </div>
                <div class="update" style="display: flex;padding: 10px">
                    <form method="post" action="/update" style="padding: 10px">
                        <input name="idUpdate" value="<%=data[i]._id%>" hidden>
                        <button class="btn btn-dark">Update</button>
                    </form>
                    <form method="post" action="/delete" style="padding: 10px">
                        <input name="idDelete" value="<%=data[i]._id%>" hidden>
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% } %>

</div>

</div>


<script>


</script>
